<%- include('../layouts/header') -%>

<h3 class="page-title">Login</h3>
<hr>
<form action="/users/login" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Username</label>
        <div class="col-xs-10">
            <input type="text" name="username" placeholder="Username" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Password</label>
        <div class="col-xs-10">
            <input type="text" name="password" placeholder="Password" class="form-control">
        </div>
    </div>

    <p>Forgot password <a href="/users/select">Here</a></p>
    <div class="form-group">
        <button type="submit" class="registerbtn">Login</button>
    </div>
</form>

<%- include('../layouts/footer') -%>