<%- include('../layouts/header') -%>

<h3 class="page-title">Password retrieval</h3>

<form action="/users/select" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Email</label>
        <div class="col-xs-10">
            <input type="text" name="email" placeholder="Email" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Password</label>
        <div class="col-xs-10">
            <input type="text" name="password" placeholder="Password" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Confirm password</label>
        <div class="col-xs-10">
            <input type="text" name="password2" placeholder="Confirm password" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-xs-10">
            <button type="submit" class="registerbtn" >Submit</button>
        </div>
    </div>

</form>

<%- include('../layouts/footer') -%>