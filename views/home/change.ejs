<%- include('../layouts/header') -%>

<h3 class="page-title">Change Passworod</h3>
<hr>
<form action="/users/change/<%= id %>" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Password Old</label>
        <div class="col-xs-10">
            <input type="text" name="password" placeholder="Password Old" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Password New</label>
        <div class="col-xs-10">
            <input type="text" name="password1" placeholder="Password" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Confirm Password New</label>
        <div class="col-xs-10">
            <input type="text" name="password2" placeholder="Confirm Password" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="registerbtn">Submit</button>
    </div>
</form>

<%- include('../layouts/footer') -%>