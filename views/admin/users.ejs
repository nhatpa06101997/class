<%- include('../layouts/admin_header') -%>

<h3 class="page-title">User</h3>
<hr>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Sex</th>
            <th>Subject</th>
            <th>Username</th>
            <th>Password</th>
            <th>Status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.sex %></td>
                <td><%= user.subject %></td>
                <td><%= user.username %></td>
                <td><%= user.password %></td>
                <td><%= user.status %></td>
                <td><a href="/admin/users/edit/<%= user._id %>">Edit</a></td>
                <td>
                    <% if(user.username == "admin") { %>
                        <p></p>
                    <% } else { %>
                        <a href="/admin/users/delete/<%= user._id %>">Delete</a>
                    <% } %>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../layouts/admin_footer') -%>