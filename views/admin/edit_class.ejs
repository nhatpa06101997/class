<%- include('../layouts/admin_header') -%>

<h3 class="page-title">Edit Class</h3>
<a href="/admin/class" class="btn btn-primary">Back to all class</a>

<form action="/admin/class/edit/<%= id %>" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Title</label>
        <div class="col-xs-10">
            <input type="text" name="title" value="<%= title %>" placeholder="Title" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Subjects</label>
        <div class="col-xs-10">
            <select name="sub" class="form-control">
                <% subs.forEach(s => { %>
                    <option value="<%= s.slug %>"
                        <% if(s.slug == sub) { %>
                            selected = "selected"
                        <% } %>
                    ><%= s.title %></option>
                <% }); %>
            </select>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-xs-10">
            <button type="submit">Submit</button>
        </div>
    </div>
</form>

<%- include('../layouts/admin_footer') -%>