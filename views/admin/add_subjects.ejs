<%- include('../layouts/admin_header') -%>

<h3 class="page-title">Add Subject</h3>
<a href="/admin/subjects" class="btn btn-primary">Back to all subjects</a>

<form action="/admin/subjects/add" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Title</label>
        <div class="col-xs-10">
            <input type="text" name="title" placeholder="Title" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Content</label>
        <div class="col-xs-10">
            <textarea name="content" cols="30" rows="10" placeholder="Content" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Majors</label>
        <div class="col-xs-10">
            <select name="major" class="form-control">
                <% majors.forEach(major => { %>
                    <option value="<%= major.slug %>"><%= major.title %></option>
                <% }); %>
            </select>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-xs-10">
            <button type="submit">Submit</button>
        </div>
    </div>
</form>

<%- include('../layouts/admin_footer') -%>