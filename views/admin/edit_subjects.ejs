<%- include('../layouts/admin_header') -%>

<h3 class="page-title">Edit Subject</h3>
<a href="/admin/subjects" class="btn btn-primary">Back to all subjects</a>

<form action="/admin/subjects/edit/<%= id %>" method="POST" class="form-horizontal">
    <div class="form-group">
        <label for="" class="control-label col-xs-2">Title</label>
        <div class="col-xs-10">
            <input type="text" name="title" value="<%= title %>" placeholder="Title" class="form-control">
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Content</label>
        <div class="col-xs-10">
            <textarea name="content" cols="30" rows="10" placeholder="Content" class="form-control"><%= content %></textarea>
        </div>
    </div>

    <div class="form-group">
        <label for="" class="control-label col-xs-2">Majors</label>
        <div class="col-xs-10">
            <select name="major" class="form-control">
                <% majors.forEach(m => { %>
                    <option value="<%= m.slug %>"
                        <% if(m.slug == major) { %>
                            selected = "selected"
                        <% } %>
                    ><%= m.title %></option>
                <% }); %>
            </select>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-xs-10">
            <button type="submit">Submit</button>
        </div>
    </div>
</form>

<%- include('../layouts/admin_footer') -%>